<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="cordova-plugin-ios-statusbar-hide"
        version="0.0.1">
    <name>IOS StatusBarHide</name>
    <description>IOS StatusBarHide Plugin</description>
    <license>Apache 2.0</license>
    <keywords>cordova,statusbar</keywords>
    <repo>https://github.com/VarsitySoftware/cordova-plugin-ios-statusbar-hide.git</repo>
    <platform name="ios">
      <config-file target="*-Info.plist" parent="UIStatusBarHidden">
        <true/>
      </config-file>
      <config-file target="*-Info.plist" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
      </config-file>
    </platform>

</plugin>
